<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.key.win.system.dao.SysMenuPermissionDao">

    <update id="deleteBySelective">
        delete from sys_menu_permission
        <where>
            <if test="permissionId != null">
                and permission_Id = #{permissionId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </update>

    <select id="findMenusByPermissionIds" resultType="com.key.win.common.model.system.SysMenu">
        select t.* from sys_menu t
        inner join sys_menu_permission r on r.menu_id = t.id
        where
        r.enable_flag = 1
        and
        t.enable_flag = 1
        and
        r.permission_Id in
        <foreach collection="permissionIds" index="index" item="permissionId"
                 open="(" separator="," close=")">
            #{permissionId}
        </foreach>
        ORDER BY sort ASC
    </select>

    <insert id="saveBatchPermissionIdAndMenuIds">
        INSERT INTO
        sys_menu_permission(create_date,create_user_id,create_user_name,enable_flag,update_date,update_user_id,update_user_name,version,permission_Id,menu_id,permission_code)
        VALUES
        <foreach collection="menuIds" item="menuId" separator=",">
            (current_timestamp(),'${@com.key.win.common.auth.AuthenticationUtil@getUserId()}','${@com.key.win.common.auth.AuthenticationUtil@getUserName()}',1,null,null,null,0,#{permissionId},#{menuId},#{permissionCode})
        </foreach>
    </insert>

    <insert id="saveBatchPermissionIdsAndMenuId">
        INSERT INTO
        sys_menu_permission(create_date,create_user_id,create_user_name,enable_flag,update_date,update_user_id,update_user_name,version,permission_Id,menu_id,permission_code
        VALUES
        <foreach collection="permissionIds" item="permissionId" separator=",">
            (current_timestamp(),'${@com.key.win.common.auth.AuthenticationUtil@getUserId()}','${@com.key.win.common.auth.AuthenticationUtil@getUserName()}',1,null,null,null,0,#{permissionId},#{menuId},#{permissionCode})
        </foreach>
    </insert>
</mapper>