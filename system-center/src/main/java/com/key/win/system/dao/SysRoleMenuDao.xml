<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.key.win.system.dao.SysRoleMenuDao">

    <update id="deleteBySelective">
        delete from sys_role_menu
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
        </where>
    </update>

    <select id="findMenusByRoleIds" resultType="com.key.win.common.model.system.SysMenu">
        select t.* from sys_menu t
        inner join sys_role_menu r on r.menu_id = t.id
        where
        r.enable_flag = 1
        and
        t.enable_flag = 1
        and
        r.role_id in
        <foreach collection="roleIds" index="index" item="roleId"
                 open="(" separator="," close=")">
            #{roleId}
        </foreach>
        ORDER BY sort ASC
    </select>

    <insert id="saveBatchRoleIdAndMenuIds">
        INSERT INTO
        sys_role_menu(create_date,create_user_id,create_user_name,enable_flag,update_date,update_user_id,update_user_name,version,role_id,menu_id)
        VALUES
        <foreach collection="menuIds" item="menuId" separator=",">
            (current_timestamp(),'${@com.key.win.common.auth.AuthenticationUtil@getUserId()}','${@com.key.win.common.auth.AuthenticationUtil@getUserName()}',1,null,null,null,0,#{roleId},#{menuId})
        </foreach>
    </insert>

    <insert id="saveBatchRoleIdsAndMenuId">
        INSERT INTO
        sys_role_menu(create_date,create_user_id,create_user_name,enable_flag,update_date,update_user_id,update_user_name,version,role_id,menu_id)
        VALUES
        <foreach collection="roleIds" item="roleId" separator=",">
            (current_timestamp(),'${@com.key.win.common.auth.AuthenticationUtil@getUserId()}','${@com.key.win.common.auth.AuthenticationUtil@getUserName()}',1,null,null,null,0,#{roleId},#{menuId})
        </foreach>
    </insert>
</mapper>